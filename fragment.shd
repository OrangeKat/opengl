#version 450

in vec3 fragColor;

uniform sampler2D texture_sampler;
uniform sampler2D lighting_sampler;
uniform sampler2D normalmap_sampler;

layout(location=0) out vec4 output_color;

int mode = 1;

void main() {
    if (mode == 1) {
        output_color = vec4(1.0, 1.0, 0.0, 1.0);
    }
    else if (mode == 2) {
        output_color = vec4(fragColor, 1.0);
    }
    else if (mode == 3) {
        output_color = vec4(fragColor, 1.0);
    }
}
